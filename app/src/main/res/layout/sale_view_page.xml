<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainlayout">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchLayout">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/saleEvent"
                android:text="행사"
                android:textSize="7pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/allEvent"
                android:text="전체"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/onePoneEvent"
                android:text="1+1"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/twoPoneEvent"
                android:text="2+1"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/bonusEvent"
                android:text="증정"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:visibility="invisible"/>

        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/convenience"
                android:text="편의점"
                android:textSize="7pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/allConvenience"
                android:text="전체"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/gs25"
                android:text="GS 25"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/seveneleven"
                android:text="7 Eleven"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

            <CheckBox
                android:id="@+id/cu"
                android:text="CU"
                android:textSize="6pt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <EditText
                android:id="@+id/inputData"
                android:textSize="6pt"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="글자를 입력하시오."
                android:maxLength="10"
                android:maxLines="1"
                android:background="#FFFFFF"/>

            <Button
                android:id="@+id/search"
                android:text="검색"
                android:textSize="6pt"
                android:layout_gravity="center_vertical"
                android:layout_width="60dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/up_down_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="UP/DOWN"/>


    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="90dp"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth"/>

</LinearLayout>